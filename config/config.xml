<?xml version="1.0" encoding="UTF-8"?>
<config>
    <profiles>
        <profile>
            <!-- Initial number of agents in State Susceptible -->
            <num.agents.S>990</num.agents.S>
            
            <!-- Initial number of agents in State Prophylactic -->
            <num.agents.P>0</num.agents.P>
            
            <!-- Initial number of agents in State Infectious -->
            <num.agents.I>10</num.agents.I>
            
            <!-- Initial number of agents in State Recovered -->
            <num.agents.R>0</num.agents.R>
            
            <!--  Payoffs -->
            <payoff.S value="float">1.00</payoff.S>
            <payoff.P value="runif">0.90,1.00</payoff.P>
            <payoff.I value="runif">0.00,0.20</payoff.I>
            <payoff.R value="runif">0.90,1.00</payoff.R>
            
            <!-- 1 - Prophylactic protection -->
            <rho value="runif">0.00,0.50</rho>
            
            <!-- Fear -->
            <kappa value="rnorm">1.00,0.02</kappa>
            
            <!-- Decision frequency -->
            <decision.frequency value="runif">0.00,0.04</decision.frequency>
            
            <!-- Planning Horizon -->
            <planning.horizon value="rgamma">3,15</planning.horizon>
        </profile>
    </profiles>
    
    <disease>
        <beta value="float">0.031</beta>
        <gamma value="float">0.015</gamma>
    </disease>
    
    <simulation>
        <!-- Network type -->
        <!-- complete -->
        <!-- random [probability] -->
        <!-- smallworld [neighbors] [probability] -->
        <!-- scalefree [neighbors] -->
        <!-- NOTE: Replace [probability] and [neighbors] by a value -->
        <networkType>complete</networkType>
        
        <!-- Simulation Methods -->
        <!-- 0 Microsimulation -->
        <!-- 1 Gillespie -->
        <!-- 2 Efficient Tau-Leap -->
        <!-- 3 Heterogeneous Microsimulation -->
        <method>3</method>
        
        <!-- Number of replications -->
        <replications>10</replications>
        
        <!-- Length of the simulation -->
        <time.steps>1000</time.steps>
    </simulation>
    
    <output>
        <!-- Format -->
        <!-- 0 Standard -->
        <!-- 1 Galapagos -->
        <output.format>0</output.format>
        
        <!-- Summary window -->
        <output.window>1</output.window>
        
        <!-- Output path -->
        <output.path>/home/gnardin</output.path>
        
        <!-- Output filename -->
        <output.filename>output-complete</output.filename>
        
        <!-- Output header -->
        <output.header>True</output.header>
        
        <!-- Output field separator -->
        <output.separator>;</output.separator>
    </output>
</config>
